@{
    ViewData["Title"] = "RSA Şifre Çöz";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>RSA Şifre Çöz</title>
    <style>
        body {
            background-color: #000010;
            color: #00aaff;
            font-family: "Courier New", Courier, monospace;
            padding: 40px;
        }

        h1 {
            text-align: center;
            font-size: 2.5em;
            margin-bottom: 30px;
            text-shadow: 0 0 10px #00aaff;
        }

        form {
            max-width: 700px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        label {
            font-weight: bold;
            font-size: 1.2em;
        }

        textarea {
            width: 100%;
            height: 140px;
            background-color: #001022;
            border: 1px solid #00aaff;
            color: #00aaff;
            padding: 15px;
            font-family: monospace;
            font-size: 1em;
            border-radius: 6px;
            resize: vertical;
        }

        button {
            background-color: #00aaff;
            border: none;
            color: #000010;
            padding: 14px 25px;
            font-size: 1.2em;
            font-weight: bold;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 150px;
            align-self: center;
        }

            button:hover {
                background-color: #0088cc;
            }

        .result {
            max-width: 700px;
            margin: 30px auto 0 auto;
            background-color: #001022;
            border: 1px solid #00aaff;
            padding: 15px;
            border-radius: 8px;
            font-family: monospace;
            font-size: 1.1em;
            white-space: pre-wrap;
            word-break: break-word;
        }

        .error {
            max-width: 700px;
            margin: 10px auto;
            color: #ff5555;
            font-weight: bold;
            text-align: center;
        }

        .back-btn {
            display: block;
            margin: 30px auto 0 auto;
            background-color: #004466;
            color: #00aaff;
            border: 2px solid #00aaff;
            font-weight: bold;
            font-size: 1.1em;
            padding: 10px 30px;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            text-align: center;
            width: 160px;
            text-decoration: none;
        }

            .back-btn:hover {
                background-color: #006699;
                color: #ffffff;
                border-color: #0088cc;
            }
    </style>
</head>
<body>
    <h1>RSA Şifre Çöz</h1>

    <form asp-action="Index" method="post">
        <label for="privateKeyBase64">Private Key (Base64):</label>
        <textarea id="privateKeyBase64" name="privateKeyBase64" placeholder="Private key'i buraya yapıştırın...">@ViewBag.PrivateKey</textarea>

        <label for="encryptedTextBase64">Şifrelenmiş Metin (Base64):</label>
        <textarea id="encryptedTextBase64" name="encryptedTextBase64" placeholder="Şifrelenmiş metni buraya yapıştırın...">@ViewBag.EncryptedText</textarea>

        <button type="submit">Şifre Çöz</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    @if (ViewBag.DecryptedText != null)
    {
        <div class="result">
            <strong>Çözülmüş Metin:</strong><br />
            @ViewBag.DecryptedText
        </div>
    }

    <button class="back-btn" type="button" onclick="history.back()">Geri Dön</button>
</body>
</html>
